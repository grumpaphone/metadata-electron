{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"allowJs": true
	},
	"include": ["src/**/*", "src/font-declarations.d.ts"],
	"exclude": ["node_modules/**/*"]
}
